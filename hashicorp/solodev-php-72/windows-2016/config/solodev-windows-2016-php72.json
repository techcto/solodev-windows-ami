{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "owner_account_id": "{{env `OWNER_ACCOUNT_ID`}}",
        "guest1_account_id": "{{env `GUEST1_ACCOUNT_ID`}}",
        "guest2_account_id": "{{env `GUEST2_ACCOUNT_ID`}}",
        "aws_ami_name": "solodev-windows-2016-php72-v{{env `SOLODEV_RELEASE`}}",
        "iam_role": "PackerWindows"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "profile": "{{ user `aws_profile`}}",
        "instance_type": "m3.medium",
        "ssh_username": "ec2-user",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Solodev DCX Windows 2016 Edition",
        "associate_public_ip_address": "true",
        "iam_instance_profile": "{{user `iam_role`}}",
        "user_data_file": "hashicorp/solodev-php-72/windows-2016/SetUpWinRM.ps1",
        "communicator": "winrm",
        "winrm_username": "Administrator",
        "winrm_use_ssl": true,
        "winrm_insecure": true,
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "Windows_Server-2016-English-Full-Base-*",
                "root-device-type": "ebs"
            },
            "owners": ["amazon"],
            "most_recent": true
        }
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "/tmp/Solodev.zip",
            "destination": "C:\\Windows\\Temp\\"
        },
        {
            "type": "windows-shell",
            "inline": [
                "hashicorp/solodev-php-72/windows-2016/scripts/base.bat",
                "hashicorp/solodev-php-72/windows-2016/scripts/php.bat",
                "hashicorp/solodev-php-72/windows-2016/scripts/mongo.bat",
                "hashicorp/solodev-php-72/windows-2016/scripts/mysql.bat",
                "hashicorp/solodev-php-72/windows-2016/scripts/mssql.bat",
                "hashicorp/solodev-php-72/windows-2016/scripts/node.bat",
                "hashicorp/solodev-php-72/windows-2016/scripts/solodev.ps1",
                "hashicorp/solodev-php-72/windows-2016/scripts/system.ps1",
                "c:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
                "c:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1"
            ]
        },
        {
            "type": "file",
            "source": "hashicorp/solodev-php-72/windows-2016/EC2Init.cmd",
            "destination": "c:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\EC2Init.cmd"
        }
    ]
}