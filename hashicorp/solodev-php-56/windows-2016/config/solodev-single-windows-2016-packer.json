{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "owner_account_id": "{{env `OWNER_ACCOUNT_ID`}}",
        "guest1_account_id": "{{env `GUEST1_ACCOUNT_ID`}}",
        "guest2_account_id": "{{env `GUEST2_ACCOUNT_ID`}}",
        "aws_ami_name": "solodev-single-windows-2016-v{{env `SOLODEV_RELEASE`}}",
        "iam_role": "PackerWindows"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "profile": "{{ user `aws_profile`}}",
        "instance_type": "t2.small",
        "ssh_username": "ec2-user",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Solodev CMS - Single Server Windows 2016 Edition",
        "associate_public_ip_address": "true",
        "iam_instance_profile": "{{user `iam_role`}}",
        "user_data_file": "hashicorp/solodev-php-56/windows-2016/scripts/SetUpWinRM.ps1",
        "communicator": "winrm",
        "winrm_username": "Administrator",
        "winrm_use_ssl": true,
        "winrm_insecure": true,
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "Windows_Server-2016-English-Full-Base-*",
                "root-device-type": "ebs"
            },
            "owners": ["amazon"],
            "most_recent": true
        }
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "hashicorp/solodev-php-56/windows-2016/scripts/SolodevSetup.cmd",
            "destination": "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SolodevSetup.cmd"
        },
        {
            "type": "file",
            "source": "/tmp/Solodev/Solodev.zip",
            "destination": "C:\\inetpub\\Solodev\\Solodev.zip"
        },
        {
            "type": "windows-shell",
            "script": "hashicorp/solodev-php-56/windows-2016/scripts/prereqs.bat"
        },
        {
            "type": "powershell",
            "script": "hashicorp/solodev-php-56/windows-2016/scripts/install-solodev.ps1"
        },
        {
            "type": "powershell",
            "script": "hashicorp/solodev-php-56/windows-2016/scripts/sysprep.ps1"
        },
        {
            "type": "powershell",
            "inline": [
                "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
                "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1"
            ]
        }
    ]
}